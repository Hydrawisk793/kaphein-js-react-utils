{
    "root": true,
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "react" : {
            "version": "detect"
        }
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "dist/",
        "node_modules/"
    ],
    "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error",
        "react-hooks/rules-of-hooks" : "error",
        "react-hooks/exhaustive-deps" : "warn",
        "no-trailing-spaces" : [
            "error",
            {
                "ignoreComments" : true
            }
        ],
        "quotes": ["error", "double"],
        "brace-style" : ["error", "allman"],
        "indent" : [
            "error",
            4,
            {
                "SwitchCase" : 0,
                "CallExpression" : {
                    "arguments" : 1
                }
            }
        ],
        "no-tabs" : "error",
        "no-mixed-spaces-and-tabs" : "error",
        "template-curly-spacing" : [
            "error",
            "always"
        ],
        "comma-spacing": "error",
        "comma-style": "error",
        "func-call-spacing": "error",
        "arrow-spacing" : "error",
        "computed-property-spacing" : "error",
        "array-bracket-spacing" : "error",
        "space-before-blocks" : "error",
        "space-infix-ops" : "error",
        "object-curly-spacing" : ["error", "always"],
        "key-spacing" : [
            "error",
            {
                "beforeColon" : true,
                "afterColon": true,
                "mode" : "strict"
            }
        ],
        "keyword-spacing" : [
            "error",
            {
                "before" : true,
                "after" : true,
                "overrides" : {
                    "if" : {
                        "before" : false,
                        "after" : false
                    },
                    "else" : {
                        "before" : false,
                        "after" : true
                    },
                    "for" : {
                        "before" : false,
                        "after" : false
                    },
                    "while" : {
                        "before" : false,
                        "after" : false
                    },
                    "do" : {
                        "before" : false,
                        "after" : false
                    },
                    "try" : {
                        "before" : false,
                        "after" : true
                    },
                    "catch" : {
                        "before" : false,
                        "after" : false
                    },
                    "finally" : {
                        "before" : false,
                        "after" : true
                    },
                    "switch" : {
                        "before" : false,
                        "after" : false
                    }
                }
            }
        ]
    }
}